<section class="about-ahmed-section">
  <div class="container">
    <div class="about-ahmed-grid">
      <div class="ahmed-profile">
        {% if section.settings.ahmed_image %}
          <img src="{{ section.settings.ahmed_image | image_url: width: 400 }}" 
               alt="Ahmed" class="ahmed-image">
        {% endif %}
        <div class="ahmed-bio">
          <h2>{{ section.settings.title }}</h2>
          <div class="ahmed-description">
            {{ section.settings.description }}
          </div>
        </div>
      </div>
      
      <div class="credentials-grid">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'credential' %}
              <div class="credential-item">
                <i class="{{ block.settings.icon }}"></i>
                <h3>{{ block.settings.title }}</h3>
                <p>{{ block.settings.description }}</p>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Ahmed",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "About Ahmed"
    },
    {
      "type": "image_picker",
      "id": "ahmed_image",
      "label": "Ahmed's Photo"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Bio Description"
    }
  ],
  "blocks": [
    {
      "type": "credential",
      "name": "Credential",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Font Awesome Icon Class",
          "default": "fas fa-graduation-cap"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Credential Title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Credential Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Ahmed"
    }
  ]
}
{% endschema %}
