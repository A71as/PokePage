  document.body.insertAdjacentHTML('beforeend', browserModalHTML);
  loadPokemonBrowser();
}

function closePokemonBrowser() {
  const modal = document.getElementById('pokemon-browser-modal');
  if (modal) {
    modal.remove();
  }
}

