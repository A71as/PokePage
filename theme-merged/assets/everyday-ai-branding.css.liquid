/* ============================================
   POKEPAGE - SHOPIFY THEME BRANDING
   Design System: Modern, Professional, Trust-Building
   ============================================ */

:root {
    /* Dynamic colors from theme settings */
    --primary: {{ settings.brand_primary | default: '#1d4035' }};
    --accent: {{ settings.brand_accent | default: '#b85a1f' }};
    --background: {{ settings.brand_warm_white | default: '#fefdfb' }};
    --surface: {{ settings.brand_cream | default: '#f7f5f0' }};
    
    /* Typography */
    /* Headings: Poppins | Body: Inter (loaded via Google Fonts in layout) */
    --font-heading: 'Poppins', 'Helvetica Neue', Arial, sans-serif;
    --font-body: 'Inter', 'Helvetica Neue', Arial, sans-serif;
    /* Spacing scale */
    --space-xxs: 0.25rem; /* 4px */
    --space-xs: 0.5rem;   /* 8px */
    --space-sm: 0.75rem;  /* 12px */
    --space-md: 1rem;     /* 16px */
    --space-lg: 1.5rem;   /* 24px */
    --space-xl: 2rem;     /* 32px */
    --container-max: 1200px;
}

/* Button System */
.btn-primary {
    background: var(--accent);
    color: white;
    border: none;
    padding: 12px 24px;
    border-radius: 6px;
    font-weight: 600;
    transition: all 0.3s ease;
}

.btn-primary:hover {
    background: var(--primary);
    transform: translateY(-2px);
}

/* Pokemon Card Builder Enhancements */
.pokemon-card-builder {
    --pokemon-blue: #3b82f6;
    --pokemon-green: #10b981;
    --pokemon-purple: #8b5cf6;
    --pokemon-yellow: #f59e0b;
    --card-shadow: 0 4px 16px rgba(0,0,0,0.1);
    --card-shadow-hover: 0 8px 32px rgba(0,0,0,0.15);
}

.pokemon-card-slot,
.pokemon-card-slot-4x3 {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
}

.pokemon-card-slot:hover,
.pokemon-card-slot-4x3:hover {
    transform: scale(1.02);
}

.pokemon-card-slot.has-card:hover,
.pokemon-card-slot-4x3.has-card:hover {
    transform: scale(1.05) translateY(-4px);
    box-shadow: var(--card-shadow-hover);
}

/* Enhanced card previews with Pokemon-themed colors */
.preview-card:nth-child(1) { background: var(--pokemon-blue); }
.preview-card:nth-child(2) { background: var(--pokemon-green); }
.preview-card:nth-child(3) { background: var(--pokemon-purple); }
.preview-card:nth-child(4) { background: var(--pokemon-yellow); }
.preview-card:nth-child(5) { background: var(--pokemon-blue); }
.preview-card:nth-child(6) { background: var(--pokemon-green); }
.preview-card:nth-child(7) { background: var(--pokemon-purple); }
.preview-card:nth-child(8) { background: var(--pokemon-yellow); }
.preview-card:nth-child(9) { background: var(--pokemon-blue); }
.preview-card:nth-child(10) { background: var(--pokemon-green); }
.preview-card:nth-child(11) { background: var(--pokemon-purple); }
.preview-card:nth-child(12) { background: var(--pokemon-yellow); }

/* Base surface and typography */
.site-wrapper {
    background: var(--background);
    color: #1b1b1b;
    font-family: var(--font-body);
    font-size: 16px;
    line-height: 1.55;
}

/* Heading styles use the heading token for visual hierarchy */
h1,h2,h3,h4,h5,h6 {
    font-family: var(--font-heading);
    margin: 0 0 0.5rem 0;
}

.header, .site-footer {
    background: var(--surface);
}

/* Utility tokens (examples) */
.spacing-xxs { padding: var(--space-xxs); }
.spacing-xs { padding: var(--space-xs); }
.spacing-sm { padding: var(--space-sm); }
.spacing-md { padding: var(--space-md); }
.spacing-lg { padding: var(--space-lg); }

/* Page container to control horizontal rhythm */
.container {
    max-width: var(--container-max);
    margin-left: auto;
    margin-right: auto;
    padding-left: calc(var(--space-md));
    padding-right: calc(var(--space-md));
}

/* About Ahmed section layout and spacing */
.about-ahmed-grid {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--space-lg);
    align-items: start;
}

/* Hero styles */
.pokepage-hero {
    background: linear-gradient(180deg, rgba(29,64,53,0.06), rgba(255,255,255,0));
    padding: calc(var(--space-xl));
}
.hero-container { max-width: var(--container-max); margin: 0 auto; padding: 0 var(--space-md); }
.hero-content { display: flex; flex-direction: column; gap: var(--space-sm); align-items: flex-start; }
.hero-title { font-size: 2.25rem; letter-spacing: -0.02em; margin: 0; color: var(--primary); }
.hero-subtitle { font-size: 1rem; color: var(--accent); font-weight: 600; text-transform: uppercase; }
.hero-description { max-width: 720px; color: #333; }
.hero-actions .btn-primary { margin-top: var(--space-md); }

/* Product layout and cards */
.product-section { padding: var(--space-xl) 0; }
.product-main { display: grid; grid-template-columns: 1fr 420px; gap: var(--space-lg); align-items: start; }
.product-gallery img { width: 100%; border-radius: 12px; box-shadow: 0 8px 24px rgba(11,22,16,0.06); }
.product-info h1 { font-size: 1.75rem; margin-bottom: var(--space-sm); }
.product-vendor { color: #666; margin-bottom: var(--space-md); }
.product-description { margin-top: var(--space-lg); color: #444; line-height:1.6 }

/* Binder widget */
.binder-widget { border: 1px solid rgba(0,0,0,0.04); padding: var(--space-md); border-radius: 12px; background: #fff; }
.binder-widget .option-row { margin-bottom: var(--space-sm); }
.binder-widget label { display:block; font-weight:600; margin-bottom: var(--space-xxs); }
.binder-widget select { width:100%; padding:8px;border-radius:8px;border:1px solid #e6e6e6 }
.binder-preview { margin-top: var(--space-md); }
.binder-grid { display:grid; gap:8px; }
.binder-grid.layout-9 { grid-template-columns: repeat(3, 1fr); }
.binder-grid.layout-16 { grid-template-columns: repeat(4, 1fr); }
.binder-grid .slot { background: #fafafa; border-radius:8px; overflow:hidden; display:flex; align-items:center; justify-content:center; min-height:80px; }
.binder-grid .slot img { width:100%; height:100%; object-fit:cover; display:block; }
.slot-placeholder { font-size:1.25rem; color:#bdbdbd }
.binder-widget .price { font-weight:700; margin-top: var(--space-sm); }
.binder-widget .actions { margin-top: var(--space-md); }
.btn.add-to-cart, .btn-primary { padding: 10px 18px; border-radius: 10px; font-weight:700 }

/* Product cards for collection pages */
.product-grid { display:grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: var(--space-lg); }
.product-card { background: #fff; border-radius: 12px; overflow:hidden; box-shadow: 0 6px 18px rgba(29,64,53,0.06); transition: transform .18s ease, box-shadow .18s ease; }
.product-card:hover { transform: translateY(-6px); box-shadow: 0 12px 28px rgba(29,64,53,0.09); }
.product-card .card-media { height: 220px; overflow:hidden; }
.product-card img { width:100%; height:100%; object-fit:cover; display:block }
.product-card .card-body { padding: var(--space-md); }
.product-card .card-title { font-size: 1rem; font-weight:600; margin:0 0 var(--space-xs) 0 }
.product-card .card-meta { color:#666; font-size:0.9rem }

/* Responsive tweaks */
@media (max-width: 820px) {
    .product-main { grid-template-columns: 1fr; }
    .about-ahmed-grid { grid-template-columns: 1fr; }
    .hero-title { font-size: 1.75rem }
}

.ahmed-profile {
    display: flex;
    gap: var(--space-md);
    align-items: flex-start;
}

.ahmed-image {
    border-radius: 8px;
    width: 100%;
    max-width: 240px;
    height: auto;
    object-fit: cover;
}

.credentials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: var(--space-md);
}

/* Card component example */
.card {
    background: var(--surface);
    border-radius: 10px;
    box-shadow: 0 6px 18px rgba(29, 64, 53, 0.06);
    padding: 16px;
}

/* Accessibility focus state */
:focus {
    outline: 3px solid rgba(29,64,53,0.12);
    outline-offset: 2px;
}

